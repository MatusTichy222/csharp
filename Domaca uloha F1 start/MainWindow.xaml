<Window x:Class="Domaca_uloha_F1_start.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.485,0.474">
        <Ellipse x:Name="Light1" Width="90" Height="90" Fill="DimGray" Margin="47,32,663,312" />
        <Ellipse x:Name="Light11" Width="90" Height="90" Fill="DimGray" Margin="47,154,663,190" />

        <Ellipse x:Name="Light2" Width="90" Height="90" Fill="DimGray" Margin="197,32,513,312" />
        <Ellipse x:Name="Light22" Width="90" Height="90" Fill="DimGray" Margin="197,154,513,190" />

        <Ellipse x:Name="Light3" Width="90" Height="90" Fill="DimGray" Margin="341,32,369,312" />
        <Ellipse x:Name="Light33" Width="90" Height="90" Fill="DimGray" Margin="341,154,369,190"/>

        <Ellipse x:Name="Light4" Width="90" Height="90" Fill="DimGray" Margin="487,32,223,312"/>
        <Ellipse x:Name="Light44" Width="90" Height="90" Fill="DimGray" Margin="487,154,223,190"/>

