        <Button FontSize="35" Name="KlikButton" Content="Klikni" HorizontalAlignment="Center" Margin="0,100,0,20" VerticalAlignment="Bottom" Background="#FFFF7500" Click="KlikButton_Click" Width="264"/>
        <Label   Name="TimeLabel" HorizontalContentAlignment="Center" FontSize="30" Content="00:00.000" HorizontalAlignment="Right" Margin="0,0,200,-150" VerticalAlignment="Center" Width="412" Height="55"/>
    </Grid>
</Window>
