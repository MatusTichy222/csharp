<Window x:Class="Cvicenie_MinecraftDressUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cvicenie_MinecraftDressUp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <ComboBox Name="Combox_HelmPicker" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="154" SelectionChanged="Combox_HelmPicker_SelectionChanged" />
        <Label HorizontalContentAlignment="Center" Name="Label_ActualArmor" Content="" HorizontalAlignment="Left" Margin="50,366,0,0" VerticalAlignment="Top" Width="154"/>
        <Image Name="Image_HelmetPlaceHolder" HorizontalAlignment="Left" Height="150" Margin="573,73,0,0" VerticalAlignment="Top" Width="150" OpacityMask="White"/>
        <Image x:Name="Image_LegPlaceHolder" HorizontalAlignment="Left" Height="150" Margin="573,587,0,0" VerticalAlignment="Top" Width="150"/>
        <Image x:Name="Image_PantPlaceHolder" HorizontalAlignment="Left" Height="150" Margin="573,421,0,0" VerticalAlignment="Top" Width="150"/>
        <Image x:Name="Image_BodyPlaceHolder" HorizontalAlignment="Left" Height="150" Margin="573,252,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.7,0.447"/>
        <ComboBox Name="Combox_LegPicker" HorizontalAlignment="Center" Margin="0,637,0,0" VerticalAlignment="Top" Width="154" SelectionChanged="Combox_LegPicker_SelectionChanged" />
        <ComboBox Name="Combox_PantPicker" HorizontalAlignment="Center" Margin="0,460,0,0" VerticalAlignment="Top" Width="154" SelectionChanged="Combox_PantPicker_SelectionChanged" />
        <ComboBox Name="Combox_BodyPicker" HorizontalAlignment="Center" Margin="0,277,0,0" VerticalAlignment="Top" Width="154" SelectionChanged="Combox_BodyPicker_SelectionChanged"  />
        <Label Name="Label_Multiplier" Content="Label" HorizontalAlignment="Left" Margin="50,453,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.54,0.599" Width="154"/>
    </Grid>
</Window>
