<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="Start" Content="Start" HorizontalAlignment="Left" Margin="62,340,0,0" VerticalAlignment="Top" FontSize="35" Background="#FF38FF02" Click="Start_Button_Click"/>
        <Button Name="Stop" Content="Stop" HorizontalAlignment="Left" Margin="662,340,0,0" VerticalAlignment="Top" FontSize="35" Background="Red" Click="Stop_Button_Click"/>
        <Button Name="Check" Content="Check Tip" HorizontalAlignment="Center" Margin="0,256,0,0" VerticalAlignment="Top" FontSize="35" Background="#FF0033FF" Click="Check_Button_Click"/>
        <Label Name="ResultLabel" Content="" HorizontalAlignment="Left" Margin="54,200,0,0" VerticalAlignment="Top" FontSize="35"/>
        <TextBox GotFocus="AnsBox_GotFocus" Name ="AnsBox" IsEnabled="False"  HorizontalAlignment="Left" Margin="54,129,0,0" TextWrapping="Wrap" Text="Zatial sa tu neda pisat" VerticalAlignment="Top" Width="373" FontSize="35"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,41,0,0" TextWrapping="Wrap" Text="Stopky tip" VerticalAlignment="Top" FontSize="50" Width="466"/>
        <Button Name="Reset" FontSize ="35"  Content="Reset" HorizontalAlignment="Center" Margin="0,340,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.217,1.75" Background="#FFFD9700" Click="Reset_Click"/>
        <CheckBox Name="SCheckBox" Content="milliseconds" HorizontalAlignment="Left" Margin="619,269,0,0" VerticalAlignment="Top" Checked="SCheckBox_Checked" Unchecked="SCheckBox_Unchecked" />
        <Button  FontSize="25" Name="Quit" Content="QUIT"  HorizontalAlignment="Left" Margin="662,61,0,0" VerticalAlignment="Top" Background="White" Width="88" Height="48" Click="Quit_Click"/>

    </Grid>
</Window>
